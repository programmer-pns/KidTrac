<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".SubmitOtpScreen">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">
        <include
            layout="@layout/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"/>
        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/verify_otp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bar_enabled="true"
            app:bar_error_color="@color/error"
            app:bar_height="4dp"
            app:bar_active_color="@color/white"
            app:bar_inactive_color="@color/white"
            app:bar_success_color="@color/success" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit OTP"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/logo_text_color"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>