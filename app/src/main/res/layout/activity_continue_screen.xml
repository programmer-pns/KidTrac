<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ContinueScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <include
            layout="@layout/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"/>
        <Button
            android:id="@+id/cont_child_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue As Child"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/logo_text_color"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"/>
        <Button
            android:id="@+id/cont_parent_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue As Parent"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/logo_text_color"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>